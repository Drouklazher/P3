<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.HistoryActivity">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/historyDayOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text= "@string/no_mood"
        app:layout_constraintBottom_toTopOf="@+id/historyDayTwo"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".125"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/violet_purple"
        android:drawablePadding="16dp" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/historyDayTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/no_mood"
        app:layout_constraintBottom_toTopOf="@+id/historyDayThree"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".125"
        android:background="@color/violet_purple"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/historyDayThree"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/no_mood"
        app:layout_constraintBottom_toTopOf="@+id/historyDayFour"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".125"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/violet_purple"
        app:layout_constraintVertical_weight="1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/historyDayFour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/no_mood"
        app:layout_constraintBottom_toTopOf="@+id/historyDayFive"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".125"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/violet_purple" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/historyDayFive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/no_mood"
        app:layout_constraintBottom_toTopOf="@+id/historyDaySix"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".125"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/violet_purple"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/historyDaySix"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/no_mood"
        app:layout_constraintBottom_toTopOf="@+id/historyDaySeven"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".125"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/violet_purple"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/historyDaySeven"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/no_mood"
        app:layout_constraintBottom_toTopOf="@+id/history_but_back"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".125"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/violet_purple" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/history_but_back"
        android:text="@string/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".125"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/history_but_fullHistory"
        android:text="@string/full_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/history_but_back"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".125"/>

</android.support.constraint.ConstraintLayout>